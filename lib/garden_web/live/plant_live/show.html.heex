<.back navigate={~p"/plants"}>Back to plants</.back>

<.header>
  <%= @plant.name %>
  <:actions>
    <.link patch={~p"/plants/#{@plant}/show/edit"} phx-click={JS.push_focus()}>
      <.button>Edit</.button>
    </.link>
  </:actions>
</.header>

<.list>
  <:item :if={@plant.current_location} title="Location">
    <.link navigate={~p"/locations/#{@plant.current_location.id}"}>
      <%= @plant.current_location.name %>
    </.link>
  </:item>
  <:item :if={@plant.seed} title="Seed">
    <.link navigate={~p"/seeds/#{@plant.seed.id}"}>
      <%= @plant.seed.name %>
    </.link>
  </:item>
</.list>

<.modal :if={@live_action == :edit} id="plant-modal" show on_cancel={JS.patch(~p"/plants/#{@plant}")}>
  <.live_component
    id={@plant.id}
    module={EditForm}
    plant={@plant}
    patch={~p"/plants/#{@plant}"}
  />
</.modal>
